{
  "name": "Halo Wiki",
  "short_name": "Halo Wiki",
  "version": "0.0.1",
  "manifest_version": 2,

  "description": "查询MediaWiki兼容的Wiki条目",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png",
    "256": "icon-256.png"
  },

  "background": {
    "page": "background.html"
  },
  "content_scripts": [ {
    "js": [ "include/jquery.min.js", "include/jquery-ui.min.js", "include/common.js", "include/lookup.js" ],
    "css": [ "style/lookup.css" ],
    "matches": [ "<all_urls>" ],
    "all_frames": true
  } ],
  "minimum_chrome_version": "20",
  "permissions": [
    "<all_urls>",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "web_accessible_resources": [
    "img/icon.svg",
    "style/icon.css",
    "main.html",
    "wiki.html"
  ],
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
